        },
        "_enabled": {
          "type": "boolean",
          "description": "Set to false to disabled this features",
          "default": true
        },
        "all": {
          "type": "boolean"
        },
        "ref": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "_key"
      ]
    },
    "ActionInfoFeatureCommandline": {
